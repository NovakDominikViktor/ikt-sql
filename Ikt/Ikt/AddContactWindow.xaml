<Window x:Class="Ikt.AddContactWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ikt"
        mc:Ignorable="d"
        Title="Új elem hozzáadása" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Keresztnév:"/>
            <TextBox x:Name="txtFirstName" Margin="0,5"/>
            <TextBlock Text="Vezetéknév:"/>
            <TextBox x:Name="txtLastName" Margin="0,5"/>
            <TextBlock Text="Email:"/>
            <TextBox x:Name="txtEmail" Margin="0,5"/>
            <TextBlock Text="Telefonszám:"/>
            <TextBox x:Name="txtPhone" Margin="0,5"/>
            <Button Name="AddButton" Content="Hozzáadás" Click="AddButton_Click" />
        </StackPanel>
        
    </Grid>
</Window>
