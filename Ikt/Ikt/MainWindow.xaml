<Window x:Class="Ikt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ikt"
        mc:Ignorable="d"
        Title="MainWindow" Height="476" Width="800">
    <Grid>
        <DataGrid x:Name="dgContacts" AutoGenerateColumns="True" Margin="10,10,10,172" />
        <StackPanel Orientation="Vertical" Margin="10,130,10,192">
            <TextBox x:Name="txtFirstName" Margin="0,5,0,5" Text="First Name" Width="200"/>
            <TextBox x:Name="txtLastName" Margin="0,5,0,5" Text="Last Name" Width="200"/>
            <TextBox x:Name="txtEmail" Margin="0,5,0,5" Text="Email" Width="200"/>
            <TextBox x:Name="txtPhone" Margin="0,5,0,5" Text="Phone" Width="200"/>
            <StackPanel Orientation="Horizontal" Width="764">
                <Button x:Name="btnAdd" Content="Add" Click="btnAdd_Click" Width="80"/>
                <Button x:Name="btnUpdate" Content="Update" Click="btnUpdate_Click" Width="80"/>
                <Button x:Name="btnDelete" Content="Delete" Click="btnDelete_Click" Width="80"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
