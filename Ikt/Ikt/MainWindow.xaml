<Window x:Class="Ikt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ikt"
        mc:Ignorable="d"
        Title="MainWindow" Height="476" Width="800">
    <Grid>
        <DataGrid x:Name="dgContacts" AutoGenerateColumns="True" MouseDoubleClick="DgContacts_MouseDoubleClick" Margin="10,10,10,172" />
        <StackPanel Orientation="Vertical" Margin="10,130,10,192">
            <StackPanel Orientation="Horizontal" Width="764">
                <Button x:Name="btnAdd" Content="Hozzáadás" Click="btnAdd_Click" Width="80"/>
                <Button x:Name="btnUpdate" Content="Módosítás" Click="btnUpdate_Click" Width="80"/>
                <Button x:Name="btnDelete" Content="Törlés" Click="btnDelete_Click" Width="80"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
