                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.679"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Button Content="Add" Name="btnAdd" Click="btnAdd_Click" Margin="655,10,31,388" />
            <Button Content="Update" Name="btnUpdate" Click="btnUpdate_Click" Margin="648,182,24,221" />
            <Button Content="Delete" Name="btnDelete" Click="btnDelete_Click" Margin="654,96,30,304" />
        <DataGrid x:Name="dgContacts" AutoGenerateColumns="True" Margin="10,10,400,268"/>
    </Grid>
</Window>
