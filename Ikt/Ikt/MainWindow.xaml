<Window x:Class="Ikt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ikt"
        mc:Ignorable="d"
        Title="MainWindow" Height="476" Width="800">
    <Grid>
            <TextBox Name="txtFirstName" Text="first name"  Margin="113,276,555,140" />
        <TextBox Name="txtLastName" Text="last_name"  Margin="278,276,400,140" />
            <TextBox Name="txtEmail" Text="email"  Margin="630,261,10,140" />
            <TextBox Name="txtPhone" Text="phone" Margin="436,266,185,135" RenderTransformOrigin="0.5,0.5" >
